{
  "name": "@inglorious/store",
  "version": "9.5.1",
  "description": "A state manager for real-time, collaborative apps, inspired by game development patterns and compatible with Redux.",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-forge.git",
    "directory": "packages/store"
  },
  "homepage": "https://inglorious-engine.vercel.app/",
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-forge/issues"
  },
  "keywords": [
    "state",
    "state-management",
    "store",
    "redux",
    "redux-alternative",
    "mutative",
    "immer",
    "collaborative",
    "multiplayer",
    "realtime",
    "event-batching"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/store.js"
    },
    "./client/devtools": {
      "types": "./types/client/devtools.d.ts",
      "import": "./src/client/devtools.js"
    },
    "./migration/rtk": {
      "types": "./types/migration/rtk.d.ts",
      "import": "./src/migration/rtk.js"
    },
    "./*": {
      "types": "./types/*.d.ts",
      "import": "./src/*"
    }
  },
  "files": [
    "src",
    "types",
    "!src/**/*.test.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "dependencies": {
    "@inglorious/utils": "workspace:*",
    "mutative": "^1.3.0"
  },
  "peerDependencies": {
    "@inglorious/utils": "workspace:*"
  },
  "devDependencies": {
    "@inglorious/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "vite": "^7.1.3",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
