{
  "name": "@inglorious/utils",
  "version": "3.7.3",
  "description": "A set of general-purpose utility functions designed with functional programming principles in mind.",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-forge.git",
    "directory": "packages/utils"
  },
  "homepage": "https://inglorious-engine.vercel.app/",
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-forge/issues"
  },
  "keywords": [
    "functional-programming",
    "gamedev",
    "game-engine",
    "inglorious-engine",
    "utils"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    },
    "./*": {
      "types": "./types/*.d.ts",
      "import": "./src/*"
    }
  },
  "files": [
    "src",
    "types",
    "!src/**/*.test.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "devDependencies": {
    "@inglorious/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "vite": "^7.1.3",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
