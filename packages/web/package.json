{
  "name": "@inglorious/web",
  "version": "4.1.1",
  "description": "A new web framework that leverages the power of the Inglorious Store combined with the performance and simplicity of lit-html.",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-forge.git",
    "directory": "packages/web"
  },
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-forge/issues"
  },
  "keywords": [
    "lit-html",
    "state",
    "state-management",
    "store",
    "redux",
    "inglorious-store"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    },
    "./form": {
      "types": "./types/form.d.ts",
      "import": "./src/form/index.js"
    },
    "./list": {
      "types": "./types/list.d.ts",
      "import": "./src/list/index.js"
    },
    "./router": {
      "types": "./types/router.d.ts",
      "import": "./src/router/index.js"
    },
    "./select": {
      "types": "./types/select.d.ts",
      "import": "./src/select/index.js"
    },
    "./table": {
      "types": "./types/table.d.ts",
      "import": "./src/table/index.js"
    },
    "./test": {
      "import": "./src/test.js"
    },
    "./table/base.css": "./src/table/base.css",
    "./table/theme.css": "./src/table/theme.css",
    "./select/base.css": "./src/select/base.css",
    "./select/theme.css": "./src/select/theme.css"
  },
  "files": [
    "src",
    "types",
    "!src/**/*.test.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "test:watch": "vitest",
    "test": "vitest run"
  },
  "dependencies": {
    "@inglorious/store": "workspace:*",
    "@inglorious/utils": "workspace:*",
    "@lit-labs/ssr-client": "^1.1.8",
    "lit-html": "^3.3.1"
  },
  "devDependencies": {
    "@inglorious/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
