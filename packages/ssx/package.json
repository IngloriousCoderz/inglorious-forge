{
  "name": "@inglorious/ssx",
  "version": "1.7.0",
  "description": "Server-Side-X. Xecution? Xperience? Who knows.",
  "author": "IceOnFire <antony.mistretta@gmail.com> (https://ingloriouscoderz.it)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IngloriousCoderz/inglorious-forge.git",
    "directory": "packages/store"
  },
  "homepage": "https://inglorious-engine.vercel.app/",
  "bugs": {
    "url": "https://github.com/IngloriousCoderz/inglorious-forge/issues"
  },
  "keywords": [
    "ssg",
    "ssr",
    "server",
    "inglorious",
    "web",
    "framework"
  ],
  "type": "module",
  "bin": {
    "ssx": "./bin/ssx.js"
  },
  "exports": {
    ".": "./types/index.d.ts",
    "./markdown": "./src/utils/markdown.js",
    "./i18n": {
      "types": "./types/i18n.d.ts",
      "import": "./src/utils/i18n.js"
    }
  },
  "files": [
    "bin",
    "src",
    "types",
    "!src/**/__fixtures__",
    "!src/**/__snapshots__"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "test:watch": "vitest",
    "test": "vitest run",
    "dev": "node ./bin/ssx.js dev -r ./src/__fixtures__",
    "build": "node ./bin/ssx.js build -r ./src/__fixtures__",
    "preview": "serve dist"
  },
  "dependencies": {
    "@inglorious/web": "workspace:*",
    "@lit-labs/ssr": "^4.0.0",
    "commander": "^14.0.2",
    "connect": "^3.7.0",
    "fast-xml-parser": "^5.3.3",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.27",
    "markdown-it": "^14.1.0",
    "markdown-it-texmath": "^1.0.0",
    "mermaid": "^11.12.2",
    "rollup-plugin-minify-template-literals": "^1.1.7",
    "sharp": "^0.34.5",
    "svgo": "^4.0.0",
    "vite": "^7.1.3",
    "vite-plugin-image-optimizer": "^2.0.3"
  },
  "devDependencies": {
    "@inglorious/eslint-config": "workspace:*",
    "prettier": "^3.6.2",
    "serve": "^14.2.1",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">= 22"
  }
}
